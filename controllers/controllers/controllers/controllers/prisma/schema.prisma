generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        String   @id @default(uuid())
  address   String   @unique
  sessions  GameSession[]
  createdAt DateTime @default(now())
}

model GameSession {
  id        String   @id @default(uuid())
  gameId    String
  score     Int?
  hash      String?
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id])
  createdAt DateTime @default(now())
}

model Leaderboard {
  id        String   @id @default(uuid())
  gameId    String
  score     Int
  player    String
  createdAt DateTime @default(now())
}

model Reward {
  id        String   @id @default(uuid())
  sessionId String
  amount    Int
  txHash    String
  createdAt DateTime @default(now())
}

model NFT {
  id        String   @id @default(uuid())
  itemId    String
  player    String
  tokenId   Int
  txHash    String
  createdAt DateTime @default(now())
}
